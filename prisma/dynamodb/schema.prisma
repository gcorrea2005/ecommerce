generator client {
  provider = "prisma-client-js"
  output   = "../../generated/dynamodb-client"
}

datasource db {
  provider = "dynamodb"
  url      = env("DATABASE_URL_DYNAMODB")
}

model group {
  id          Int      @id @default(autoincrement())
  group       String
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model subgroup {
  id          Int      @id @default(autoincrement())
  subgroup    String
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  groupId     Int
}

model category {
  id          Int      @id @default(autoincrement())
  category    String
  description String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  subgroupId  Int
}

model product {
  id        Int      @id @default(autoincrement())
  product   String
  price     Float
  stock     Int
  unit      String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  categoryId Int
} 

model order {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user user[]
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  telefono  String
  direccion String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    order[]
} 
