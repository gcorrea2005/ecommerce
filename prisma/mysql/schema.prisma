generator client {
  provider = "prisma-client-js"
  output   = "../../generated/mysql-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_MYSQL")
}

model tblgroup {
  id          Int         @id @default(autoincrement())
  group       String
  description String?     @db.Text // Campo para la descripci贸n larga
  image       String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  subgroups   tblsubgroup[]
}

model tblsubgroup {
  id          Int         @id @default(autoincrement())
  subgroup    String
  description String?     @db.Text // Campo para la descripci贸n larga
  image       String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  groupId     Int
  group       tblgroup    @relation(fields: [groupId], references: [id])

  categories  tblcategory[]
}

model tblcategory {
  id          Int         @id @default(autoincrement())
  category    String
  description String?     @db.Text // Campo para la descripci贸n larga
  image       String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  subgroupId  Int
  subgroup    tblsubgroup @relation(fields: [subgroupId], references: [id])

  products    tblproduct[]
}

model tblproduct {
  id          Int         @id @default(autoincrement())
  product     String
  description String?     @db.Text // Campo para la descripci贸n larga
  price       Float
  stock       Int
  unit        String
  image       String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  categoryId  Int
  category    tblcategory @relation(fields: [categoryId], references: [id])

  orders      tblorder[]
}

model tblrole {
  id          Int         @id @default(autoincrement())
  role       String
  description String
  image       String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  subgroups   tbluser[]
}

model tbluser {
  id          Int         @id @default(autoincrement())
  name        String
  password    String
  telefono    String
  direccion   String
  email       String      @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  roleId     Int
  role       tblrole    @relation(fields: [roleId], references: [id])

  categories  tblorder[]
}

model tblorder {
  id          Int         @id @default(autoincrement())
  quantity    Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userId      Int
  productId   Int
  user        tbluser     @relation(fields: [userId], references: [id])
  product     tblproduct  @relation(fields: [productId], references: [id])
}